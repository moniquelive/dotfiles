# tabs
#keybind = super+enter=new_tab
keybind = ctrl+shift+n=next_tab
keybind = super+]=move_tab:+1
keybind = super+[=move_tab:-1

# create splits
keybind = alt+-=new_split:down
keybind = alt+\=new_split:right

# navigate splits
keybind = alt+h=goto_split:left
keybind = alt+j=goto_split:bottom
keybind = alt+k=goto_split:top
keybind = alt+l=goto_split:right

# resize splits
keybind = shift+alt+h=resize_split:left,10
keybind = shift+alt+j=resize_split:down,10
keybind = shift+alt+k=resize_split:up,10
keybind = shift+alt+l=resize_split:right,10
keybind = shift+alt+0=equalize_splits

# selection
keybind = super+s=paste_from_selection
